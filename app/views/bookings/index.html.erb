<h1>Booking Appointment</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Hospital</th>
      <th scope="col">Doctor</th>
      <th scope="col">Start Time</th>
      <th scope="col">End Time</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.doctor.hospital.name %></td>
        <td><%= schedule.doctor.name %></td>
        <td><%= schedule.start_time.strftime('%D %T') %></td>
        <td><%= schedule.end_time.strftime('%D %T') %></td>
        <td><%= link_to 'Book appointment', "/bookings?schedule_id=#{schedule.id}", method: :create, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>