
<h1><%= @title %></h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Name</th>
      <th scope="col">Uid</th>
      <th scope="col">Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.name %></td>
        <td><%= user.uid %></td>
        <td><%= user.type %></td>
        <td><%= link_to 'Show', user_path(user, type: @title) %></td>
        <td><%= link_to 'Edit', edit_user_path(user, type: @title) %></td>
        <td><%= link_to 'Destroy',"/users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path(type: @title) %>
